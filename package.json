{
    "name": "echarts-enhanced-completion",
    "displayName": "Echarts Enhanced Completion",
    "description": "Provide stronger and more friendly complements for echarts.",
    "version": "1.1.0",
    "publisher": "ren-wei",
    "repository": {
        "type": "git",
        "url": "https://github.com/ren-wei/echarts-enhanced-completion"
    },
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/logo.png",
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:javascript",
        "onLanguage:typescript",
        "onLanguage:vue"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/index.json"
            },
            {
                "language": "javascript",
                "path": "./snippets/index.json"
            },
            {
                "language": "typescript",
                "path": "./snippets/index.json"
            },
            {
                "language": "vue",
                "path": "./snippets/index.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "yarn run test-compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "@types/vscode": "^1.58.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "axios": "^0.21.1",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "html2markdown": "^1.1.0",
        "husky": ">=6",
        "lint-staged": ">=10",
        "mocha": "^8.4.0",
        "ts-loader": "^9.2.2",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2",
        "webpack": "^5.38.1",
        "webpack-cli": "^4.7.0"
    },
    "dependencies": {
        "espree": "^8.0.0"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix"
    }
}
